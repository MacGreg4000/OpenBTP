// D√©tails de chaque choix produit dans un ChoixClient
model DetailChoix {
  id                  String        @id @default(uuid())
  choixClientId       String
  numeroChoix         Int           // Ordre d'affichage (1, 2, 3...)
  couleurPlan         String        // Code couleur hex pour le rep√©rage sur le plan (#0066FF)
  localisations       Json          // Array de localisations ["S√©jour", "Cuisine", ...]
  type                TypePose      @default(SOL)
  
  // Produit
  marque              String
  collection          String?
  modele              String
  reference           String?
  couleur             String?
  formatLongueur      Decimal?      @db.Decimal(10, 2) // en cm
  formatLargeur       Decimal?      @db.Decimal(10, 2) // en cm
  epaisseur           Decimal?      @db.Decimal(10, 2) // en mm
  finition            FinitionCarrelage?
  surfaceEstimee      Decimal?      @db.Decimal(10, 2) // en m¬≤
  
  // Joints
  couleurJoint        String?
